# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.php]
indent_size = 4

[*.yaml]
indent_size = 2

[*.{js,mjs,.vue,.ts}]
js_termination_style = ensure_semicolon
js_quote_style = singlequoted
